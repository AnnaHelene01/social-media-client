{
    "plugins": [
        "jest", 
        "cypress"
     ],
     
    "env": {
        "browser": true,
        "es2021": true,
        "amd": true,
        "node": true,
        "cypress/globals": true,
        "jest/globals": true
    },
    "extends": [
    "eslint:recommended",
    "plugin:cypress/recommended"
     ],
    "overrides": [
        {
          "files": ["test/**"],
          "extends": ["plugin:jest/recommended"],
          "rules": { "jest/prefer-expect-assertions": "off" 
        }
        }
      ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn"
        

    }

}
